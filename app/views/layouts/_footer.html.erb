  <div class="repo">
<% if name.present? %>
    <h4> Repo: <%= name %></h4>
  </div>
  <div class="group">
<% elsif group.present? %>
  <h4> Group Members: </h4>
  <% group.each do |member| %>
    <p> <%= member %> </p>
  <% end %>
  </div>
  <div class="commits">
<% elsif group.present? && contributions.present? %>
  <h4> Commits by Group Member: </h4>
  <% contributions.each do |member, commits| %>
    <% if group.include?(member) %>
      <p> Member: <%= member %>, Commits: <%= commits %> </p>
    <% end %>
  <% end %>
  </div>
  <div class="pull">
<% elsif pull_requests.present? %>
  <h4> Number of Pull Requests: <%= pull_requests %></h4>
  </div>
<% end %>